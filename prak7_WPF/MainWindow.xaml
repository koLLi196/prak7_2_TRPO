<Window x:Class="prak7_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prak7_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1900">


    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Border Grid.Column="0" Grid.Row="1" BorderBrush="black" BorderThickness="2" Margin="5">
        <StackPanel Orientation="Horizontal">
        <StackPanel>
            <Label Content="Фамилия" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"  />
            <Label Content="Имя" Grid.Row="2" Grid.Column="0"  HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Label Content="Отчество" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"  />
            <Label Content="Профессия" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Пароль" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Подтверждение пароля" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Content="Сохранить" VerticalAlignment="Top" HorizontalAlignment="Right" Height="30" Width="110" Margin="0, 0, 20, 0" Click="Registration_Click" />
         </StackPanel>
        <StackPanel>
            <TextBox Text="{Binding CurDoctor.Name, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" Margin="4" Width="250"/>
                    <TextBox Text="{Binding CurDoctor.LastName, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" Margin="4" Width="250"/>
                    <TextBox Text="{Binding CurDoctor.MiddleName, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" Margin="4" Width="250"/>
                    <TextBox Text="{Binding CurDoctor.Specialisation, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" Margin="4" Width="250"/>
                    <TextBox Margin="4" Width="250"/>
                    <TextBox Margin="4" Width="250"/>
        </StackPanel>
        </StackPanel>
        </Border>

        <Border Grid.Column="0" Grid.Row="2" BorderBrush="black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="Идентификатор" Grid.Row="1" Grid.Column="0"/>
                <Label Content="Пароль" Grid.Row="2" Grid.Column="0"/>
                <Button Content="Войти" VerticalAlignment="Top" HorizontalAlignment="Right" Height="30" Width="110" Margin="0, 0, 20, 0" Click="Registration_Click" />
            </StackPanel>
            
            <StackPanel>
                <TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" Grid.Row="1" Grid.Column="1" Margin="5,5,15,5" HorizontalAlignment="Left" Width="250"/>
                    <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" Grid.Row="2" Grid.Column="1" Margin="5,5,15,5"  HorizontalAlignment="Left" Width="250"/>
                </StackPanel>
            </StackPanel>
        </Border>



        <Border Grid.Column="0" Grid.Row="3" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label Content="Фамилия" Grid.Row="1" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label Content="Имя" Grid.Row="2" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label Content="Отчество" Grid.Row="3" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label Content="Профессия" Grid.Row="4" Grid.Column="0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel>
                    <TextBox Text="{Binding LastName}" Margin="7" Width="250"/>
                    <TextBox Text="{Binding MiddleName}" Margin="7" Width="250"/>
                    <TextBox Text="{Binding Specialisation}" Margin="7" Width="250"/>
                    <TextBox Text="{Binding Specialisation}" Margin="7" Width="250"/>
            </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="2" Height="70" VerticalAlignment="Top" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Id" FontSize="16" HorizontalAlignment="Left"/>
                    <TextBox Text="{Binding SearchPatientId}" Width="350" Height="20" Margin="5,5,15,5"/>
                </StackPanel>
                <StackPanel>
                    <Button Content="Найти" VerticalAlignment="Top" HorizontalAlignment="Center" Height="30" Width="110" Margin="0, 20, 20, 0" Click="SearchPatientInfo_Click"  />
                </StackPanel>
            </StackPanel>
        </Border>
        
        

        <Border Grid.Column="1" Grid.Row="2" BorderBrush="Black" BorderThickness="2" Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel VerticalAlignment="Top">
                </StackPanel>

                <StackPanel>
                    <Label Content="Фамилия" HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <Label Content="Имя"  HorizontalAlignment="Left" VerticalAlignment="Center" />
                    <Label Content="Отчество"  HorizontalAlignment="Left" VerticalAlignment="Center"  />
                    <Label Content="День рождения"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Последнее посещение" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="ФИО последнего доктор" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Диагноз" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Content="Лечение" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                </StackPanel>
                <StackPanel Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Bottom">
                    <TextBox Text="{Binding InfoPatient.NamePatient}" IsReadOnly="True" Margin="0,5,15,0" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding InfoPatient.LastNamePatient}" IsReadOnly="True" Margin="0,10,15,0"  HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding InfoPatient.MiddleNamePatient}" IsReadOnly="True" Margin="0,10,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding InfoPatient.BirthdayPatient}" IsReadOnly="True" Margin="0,5,15,0"   HorizontalAlignment="Left" Width="350"/>
                    <TextBox Text="{Binding InfoPatient.LastAppointmentPatient}" IsReadOnly="True" HorizontalAlignment="Left" Width="350" VerticalAlignment="Center"  Margin="0, 5, 15, 5"/>
                    <TextBox  Text="{Binding LastDoctorFullName}" IsReadOnly="True" HorizontalAlignment="Left" Width="350" Margin="0, 5, 15, 5"/>
                    <TextBox Text="{Binding InfoPatient.DiagnosisPatient}" IsReadOnly="True" HorizontalAlignment="Left" Width="350" VerticalAlignment="Center"  Margin="0, 5, 15, 5"/>
                    <TextBox Text="{Binding InfoPatient.RecomendationsPatient}" IsReadOnly="True" HorizontalAlignment="Left" Width="350" Margin="0, 5, 15, 5"/>
                </StackPanel>
            </StackPanel>
        </Border>


    </Grid>
</Window>
